<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<div class="container-fluid">
  <% @rooms.in_groups_of(2).each{|first_room,second_room| %>
    <div class="row">
      <div class="col" style="border-right: solid black 1px;">
        <h4 align="center"><%= first_room.name %></h4>
        <% first_room.systems.each{|system| %>
          <p><%= system.system_name %></p>
        <% } %>
      </div>
      <div class="col">
        <% unless second_room == nil %>
          <h4 align="center"><%= second_room.name %></h4>
          <% second_room.systems.each{|system| %>
            <p><%= system.system_name %></p>
          <% } %>
        <% end %>
      </div>
    </div>
  <% } %>
</div>

<br><hr><br>

<%= link_to 'New Room', new_room_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.location %></td>
        <td><%= room.address %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>