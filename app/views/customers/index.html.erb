<div class="form-container" style="min-width: 50%;">

<p id="notice"><%= notice %></p>

<div class="master-container" align="center">
  <h1>Customers</h1>
  <%= link_to 'New Customer', new_customer_path, class: "bt btn-primary btn-lg" %><br><br>
</div>

<table class="index-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Harvest Preferences</th>
      <th>Delivery Preferences</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><h3><%= link_to customer.name, customer %></h3></td>
        <td align="center"><%= customer.harvest_preferences %></td>
        <td align="center"><%= customer.delivery_preferences %></td>
        <td align="center"><%= customer.notes %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-primary btn-md" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-md" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>