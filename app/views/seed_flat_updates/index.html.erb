<div class="master-container">
  <p id="notice"><%= notice %></p>

  <h1>Seed Flat Updates</h1>
  <%= link_to "full index", "/seed_flat_updates/full_index", class: "btn btn-success" %>

  <table class="index-table">
    <thead>
      <tr>
        <th>Update type</th>
        <th>Seed flat</th>
        <th>Update datetime</th>
        <th>Origin system</th>
        <th>Destination system</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @seed_flat_updates.each do |seed_flat_update| %>
        <tr>
          <td><%= seed_flat_update.update_type %></td>
          <td>
            <% if seed_flat_update.seed_flat.flat_id == nil %>
              <%= link_to "#{seed_flat_update.seed_flat.former_flat_id}: #{Crop.where(id: seed_flat_update.seed_flat.crop_id)[0].crop_variety}, #{Crop.where(id: seed_flat_update.seed_flat.crop_id)[0].crop.capitalize}", seed_flat_update.seed_flat %>
            <% else %>
              <%= link_to "#{seed_flat_update.seed_flat.flat_id}: #{Crop.where(id: seed_flat_update.seed_flat.crop_id)[0].crop_variety}, #{Crop.where(id: seed_flat_update.seed_flat.crop_id)[0].crop.capitalize}", seed_flat_update.seed_flat %>
            <% end %>

            </td>
          <td><%= seed_flat_update.update_datetime %></td>
          <td><%= seed_flat_update.origin_system_id %></td>
          <td><%= seed_flat_update.destination_system_id %></td>
          <td><%= seed_flat_update.notes %></td>
          <td><%= link_to 'Show', seed_flat_update %></td>
          <td><%= link_to 'Edit', edit_seed_flat_update_path(seed_flat_update) %></td>
          <td><%= link_to 'Destroy', seed_flat_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Seed Flat Update', new_seed_flat_update_path %>
</div>