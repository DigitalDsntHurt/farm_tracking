<div class="form-container" style="min-width: 1200px;">  
  <p id="notice"><%= notice %></p>

  <h1 align="center">Over Grow Recipients</h1>
  <div align="center">
    <%= link_to 'New Over Grow Recipient', new_over_grow_recipient_path, class: "btn btn-primary btn-lg" %>
  </div>

  <br><br>
  <h3 align="center">copy email list</h3>
  <div style="min-width: 900px;border:solid 1px rgba(0,0,0,0.2);padding:22px;"><%= @over_grow_recipients.map{|record| record.email }.join(", ") %></div>

  <table class="index-table">
    <thead>
      <tr>
        <th style="align:center;">Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @over_grow_recipients.each do |over_grow_recipient| %>
        <tr>
          <td><%= over_grow_recipient.email %></td>
          <td><%= link_to 'Show', over_grow_recipient %></td>
          <td><%= link_to 'Edit', edit_over_grow_recipient_path(over_grow_recipient) %></td>
          <td><%= link_to 'Destroy', over_grow_recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>