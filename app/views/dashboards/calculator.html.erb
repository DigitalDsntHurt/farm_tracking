<h3>Calculator</h3>




<%= form_for :dashboards, url: { action: :calculate }, method: :post do |f|   %>
  <table>
  	<tr>
  		<td>
  			
  			<%= f.select(:crop, @crops.map { |value| [ value, value ] }) %>
  		</td>
  		<td>
  			<%= f.label :desired_weight_in_lbs %>
  			<%= number_field_tag :weight, params[:weight] %>
  		</td>
  		<td>
  			<%= f.label :desired_date %>
  			<%= date_select :date, params[:date] %>	
  		</td>
  		<td>
  			<br/>
  			<%= f.submit 'Calculate!' %>			
  		</td>
  	</tr>
  </table>
  
<% end %>

<% unless @result.nil? %>
  <p><strong><%= @result %></strong></p>
<% end %>
