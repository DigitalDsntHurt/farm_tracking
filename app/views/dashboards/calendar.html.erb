<br><br><br><br><br><br><br><br>
<div class="container-fluid">
	<% @weeks.each{|week| %>
		<div class="row">
			<% week.each{|day| %>
				<div class="col cal-day" align="center">
					<% if day == Date.today %>
						<br><strong><%= day %></strong><br>
					<% else %>
						<br><%= day %><br>
					<% end %>
					
					<% unless day == nil %>
						<% @query_date = day-15 %>
						<%= @query_date %><br>
						<% @resp = SeedFlat.where(started_date: @query_date) %>
						<%= @resp.count %><br>
						<% @resp.each{|flat| %>
							<%= flat %><br>
						<% } %>
					<% end %>



				</div>
			<% } %>
		</div>
	<% } %>
</div>

<br><br><hr><br><br>

<table>
		<tr>
			<th>
				sewn date
			</th>
			<th>
				flats
			</th>
			<th>
				expected harvest weight
			</th>
			<th>
				expected harvest date
			</th>
		</tr>
		<% @grouped_seed_flats.each{|date,flats| %>
		<tr>
			<td>
				<%= date %>		
			</td>
			<td>
				<%= flats.map{|f| f.crop }.join(", ") %>		
			</td>
			<td>
				<%= (flats.count*0.5).to_s+" LBS" %>		
			</td>
			<td>
				<%= date + 15 %>
			</td>
		</tr>
		<% } %>
	</table>

<br><br><hr><br><br>

<% @seed_flats.each{|flat| %>
	<p>
