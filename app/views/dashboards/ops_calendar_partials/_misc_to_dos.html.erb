<% if day < Date.today %>
	<h3 align="center"><u>Misc ToDos: <%= done_query.count %> of <%= to_do_query.count %> completed</u></h3>
<% else %>
	<h3 align="center"><u>Misc ToDos: <%= done_query.count %> of <%= to_do_query.count %> completed</u> <%= link_to "New Do", new_farm_ops_do_path, class: "btn btn-primary" %></h3>
<% end %>

<% to_do_query.order(completed_on: :desc).each{ |to_do| %>
	<% if to_do.completed_on == nil %>
		<h4>
			<%= link_to farm_ops_dos_mark_farm_ops_dos_done_path(:controller => "farm_ops_dos", :action => "mark_farm_ops_do_done", :do => to_do.id), :class => "btn btn-outline-primary btn-sm" do %>
				<span class="glyphicon glyphicon-unchecked"></span>
			<% end %>
			<%= to_do.verb %>
		</h4>
	<% else %>
		<h4>
			<%= link_to farm_ops_dos_mark_farm_ops_dos_undone_path(:controller => "farm_ops_dos", :action => "mark_farm_ops_do_undone", :do => to_do.id), :class => "btn btn-outline-primary btn-sm" do %>
	        	<span class="glyphicon glyphicon-check"></span> 
	      	<% end %>
	      	<%= to_do.verb %>
      	</h4>
        
	<% end %>
<% } %>