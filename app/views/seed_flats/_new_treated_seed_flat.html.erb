
<%= form_for(seed_flat) do |f| %>
  <% if seed_flat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(seed_flat.errors.count, "error") %> prohibited this seed_flat from being saved:</h2>

      <ul>
      <% seed_flat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1>treated seed flat form</h1>

  <div class="field">
    <%= f.label :current_system_id %>
    <%= f.select :current_system_id, System.where(system_name: "propagation").collect{|system| ["#{system.system_name} - #{Room.where(id: system.room_id)[0].name}", system.id ]}.reverse %>
  </div> 

  <div class="field">
    <%= f.label :sewn_for %>
    <%= f.text_field :sewn_for %>
  </div>

  <div class="field">
    <%= f.label :flat_identifier %>
    <%= f.text_field :flat_id %>
  </div>
  
  <div class="field">
    <%= f.label :seed_weight %>
    <%= f.text_field :seed_weight_oz %>
  </div>

<p>****** ****** ****** ****** ****** ******</p>  
  <div class="field">
    <%= f.label :started_date %>
    <%= f.date_select :started_date %>
  </div>
  
  <div class="field">
    <%= f.label :crop %>
    <%= f.select :crop_id, Crop.all.collect{|crop| ["#{crop.crop} - #{crop.crop_variety}", crop.id ] }, :include_blank => true %>
  </div>

  <div class="field">
    <%= f.label :medium %>
    <%= f.text_field :medium, value: "biostrate felt" %>
  </div>

  <div class="field">
    <%= f.label :format %>
    <%= f.text_field :format, value: "matt" %>
  </div>

  <div class="field">
    <%= f.label :seed_media_treatment_notes %>
    <%= f.text_field :seed_media_treatment_notes %>
  </div>

  <div class="field">
    <%= f.label :seed_treatments_id %>
    <%= f.select :seed_treatments_id, SeedTreatment.all.collect{|treatment| ["#{treatment.seed_crop} - #{treatment.soak_start_datetime.strftime('%a, %e %b')}", treatment.id ] }, :include_blank => true %>
  </div>

  <div class="field">
    <%= f.label :first_emerge_date %>
    <%= f.date_select :first_emerge_date, include_blank: true  %>
  </div>

  <div class="field">
    <%= f.label :full_emerge_date %>
    <%= f.date_select :full_emerge_date, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :emergence_notes %>
    <%= f.text_field :emergence_notes %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
