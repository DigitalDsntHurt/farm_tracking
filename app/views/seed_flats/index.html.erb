<p id="notice"><%= notice %></p>

<div class="conrainer-fluid" style="padding-left:14px;">
  <div class="row">
    <div class="col">
    </div>
  </div>
</div>
<br>

<table class="seed-flats-index">
  <thead>
    <tr>
      <th>started date</th>
      <th>id</th>
      <th>crop</th>
      <th>variety</th>
      <th>seed brand</th>
      <th>medium</th>
      <th>format</th>
      <th>seed weight</th>
      <th>seed/media treatment</th>
      <th>first emergence</th>
      <th>full emergence</th>
      <th>emergence notes</th>
      <th>first transplant</th>
      <th>second transplant</th>
      <th>third transplant</th>
      <th>harvested</th>
      <th>harvest wt oz</th>
      <th>harvest wt lbs</th>
      <th>harvest week</th>
      <th>harvest notes</th>
      <th>former flat id</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @seed_flats.each do |seed_flat| %>
      <% if seed_flat.harvest_weight_oz == 0.0 %>
        <tr style="background-color: #CD3333; font-size: 18px;">
      <% elsif seed_flat.harvest_weight_oz != nil %>
          <tr style="background-color: #659D32; font-size: 18px;">
      <% elsif seed_flat.date_of_first_transplant != nil %>
          <tr style="background-color: lightyellow;">
      <% else %>
        <tr style="background-color: #F5F5F5; font-size: 18px;">
      <% end %>
        <td><%= seed_flat.started_date %></td>
        <td><%= seed_flat.flat_id %></td>
        <td><%= seed_flat.crop %></td>
        <td class="seed_flat_index_text_cell_small"><%= seed_flat.crop_variety %></td>
        <td><%= seed_flat.seed_brand %></td>
        <td><%= seed_flat.medium %></td>
        <td><%= seed_flat.format %></td>
        <td><%= seed_flat.seed_weight_oz %></td>
        <td class="seed_flat_index_text_cell_medium" style="max-width:22px; white-space:pre-wrap;white-space:-moz-pre-wrap;white-space:-pre-wrap;white-space:-o-pre-wrap;word-wrap:break-word"><%= seed_flat.seed_media_treatment_notes %></td>
        <td><%= seed_flat.first_emerge_date %></td>
        <td><%= seed_flat.full_emerge_date %></td>
        <td class="seed_flat_index_text_cell_medium" style="max-width:22px; white-space:pre-wrap;white-space:-moz-pre-wrap;white-space:-pre-wrap;white-space:-o-pre-wrap;word-wrap:break-word"><%= seed_flat.emergence_notes %></td>
        <td><%= seed_flat.harvested_on %></td>
        <td><%= seed_flat.harvest_weight_oz %></td>
        <td><%= seed_flat.hrvst_wt_lbs %></td>
        <td><%= seed_flat.harvest_week %></td>
        <td class="seed_flat_index_text_cell_medium" style="max-width:22px; white-space:pre-wrap;white-space:-moz-pre-wrap;white-space:-pre-wrap;white-space:-o-pre-wrap;word-wrap:break-word"><%= seed_flat.harvest_notes %></td>
        <td class="seed_flat_index_text_cell_medium"><%= seed_flat.former_flat_id %></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
          <table class='seed-flats-index-actions'>
            <tr align="center">
              <td>
                <%= link_to 'Show', seed_flat, :class => "btn btn-outline-info sf-index-actions" %>
              </td>
              <td>
                <%= link_to 'Edit', edit_seed_flat_path(seed_flat), :class => "btn btn-outline-info sf-index-actions" %>    
              </td>
              <td>
                <%= link_to 'Destroy', seed_flat, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-info sf-index-actions" %>
              </td>
              <td>
                <%= link_to 'Clone', seed_flats_copy_path(:controller => "seed_flats", :action => "copy", :old_seed_flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>  
              </td>
              <td>
                 <button type="button" class="btn btn-outline-info sf-index-actions" data-toggle="modal" data-target="#kill_<%= seed_flat.id %>">Kill</button>               
              </td>
              <td>
                
              </td>              
            </tr>
            <tr align="center">
              <td>
                <% if seed_flat.first_emerge_date == nil %>
                  <%= link_to '1st Emerge', seed_flats_first_emerge_path(:controller => "seed_flats", :action => "first_emerge", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>  
                <% else %>
                  <p>
                                
                  </p>
                <% end %>
              </td>
              <td>
                <% if seed_flat.full_emerge_date == nil %>
                  <%= link_to 'Full Emerge', seed_flats_full_emerge_path(:controller => "seed_flats", :action => "full_emerge", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
                <% else %>
                  <p>
                                
                  </p>
                <% end %>
              </td>
              <td>
                <% if seed_flat.date_of_first_transplant == nil %>
                  <%= link_to '1st Transplant', seed_flats_first_transplant_path(:controller => "seed_flats", :action => "first_transplant", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
                <% else %>
                  <p>
                                
                  </p>
                <% end %>
              </td>
              <td>
                <% if seed_flat.date_of_second_transplant == nil %>
                  <%= link_to '2nd Transplant', seed_flats_second_transplant_path(:controller => "seed_flats", :action => "second_transplant", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
                <% else %>
                  <p>
                                
                  </p>
                <% end %>
              </td>
              <td>
                <% if seed_flat.date_of_third_transplant == nil %>
                  <%= link_to '3rd Transplant', seed_flats_third_transplant_path(:controller => "seed_flats", :action => "third_transplant", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
                <% else %>
                  <p>
                                
                  </p>
                <% end %>                
              </td>
              <td>
                <%= link_to 'Harvest', seed_flats_harvest_path(:controller => "seed_flats", :action => "harvest", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
              </td>
            </tr>
          </table>
        </td>
      </tr>

              <!-- Modal -->
<div class="modal fade" id="kill_<%= seed_flat.id %>" tabindex="-1" role="dialog" aria-labelledby="Confirm Kill Flat" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm kill seed flat <%= seed_flat.flat_id %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to kill <%= seed_flat.flat_id %>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info sf-index-actions" data-dismiss="modal">Close</button>
        <% if seed_flat.harvest_weight_oz == nil %>
                  <%= link_to 'Kill', seed_flats_kill_path(:controller => "seed_flats", :action => "kill", :flat => seed_flat.id), :class => "btn btn-outline-info sf-index-actions" %>
                <% else %>
                  <p>
                                
                  </p>
                <% end %> 
      </div>
    </div>
  </div>
</div>









    <% end %>
  </tbody>
</table>

<br>




