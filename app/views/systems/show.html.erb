<div style="margin-left:22px;">

<p id="notice"><%= notice %></p>

<p>
  <strong>Room:</strong>
  <%= link_to "#{@system.room.name} - #{@system.room.location} @ #{@system.room.address}", @system.room %>
</p>

<p>
  <strong>System Name</strong>
  <%= @system.system_name %>
</p>

<p>
  <strong>Build date:</strong>
  <%= @system.build_date %>
</p>

<p>
  <strong>System type:</strong>
  <%= @system.system_type %>
</p>

<p>
  <strong>System dimensions:</strong>
  <%= @system.system_dimensions %>
</p>

<p>
  <strong>Levels:</strong>
  <%= @system.levels %>
</p>

<p>
  <strong>Flat Slots:</strong>
  <%= @system.flat_slots %>
</p>

<p>
  <strong>Lights:</strong>
  <%= @system.lights %>
</p>

<p>
  <strong>Pumps:</strong>
  <%= @system.pumps %>
</p>

<p>
  <strong>Pump Time:</strong>
  <%= @system.pump_time %>
</p>

<p>
  <strong>Current Nutrient Solution:</strong>
  <%= @system.current_nutrient_solution %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @system.notes %>
</p>

<p>
  <strong>Retired?:</strong>
  <%= @system.retired %>
</p>
<p>
  <strong>Retired On:</strong>
  <%= @system.retired_on %>
</p>

<%= link_to 'Edit', edit_system_path(@system), :class => "btn btn-success"  %>
<%= link_to 'Back', systems_path, :class => "btn btn-success" %>

<br><br><hr>
<h3>Flats in <%= @system.system_name%></h3>
<table>
<% SeedFlat.where(current_system_id: @system.id).in_groups_of(9).each{|group| %>
  <tr>
    <% group.each{|flat| %>
      <td style="padding-right:12px;">
        <% unless flat == nil %>
          <%= link_to "#{flat.flat_id}", flat %>
        <% end %>
      </td>
    <% } %>
  </tr>
<% } %>
</table>

</div>