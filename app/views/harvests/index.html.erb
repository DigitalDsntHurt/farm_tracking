<p id="notice"><%= notice %></p>

<h1>Harvests</h1>

<table class="index-table">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Crop</th>
      <th>Order</th>
      <th>Qty oz</th>
      <th>Instructions</th>
      <th>Date</th>
      <th>Time</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @harvests.each do |harvest| %>
      <tr>
        <td><%= harvest.customer_id %></td>
        <td><%= harvest.crop_id %></td>
        <td><%= harvest.order_id %></td>
        <td><%= harvest.qty_oz %></td>
        <td><%= harvest.instructions %></td>
        <td><%= harvest.date %></td>
        <td><%= harvest.time %></td>
        <td><%= harvest.completed %></td>
        <td><%= link_to 'Show', harvest %></td>
        <td><%= link_to 'Edit', edit_harvest_path(harvest) %></td>
        <td><%= link_to 'Destroy', harvest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

