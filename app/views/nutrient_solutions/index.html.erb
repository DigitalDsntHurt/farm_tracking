<p id="notice"><%= notice %></p>

<h1 align="center">
  Nutrient Solutions<br>
  <%= link_to 'New Nutrient Solution', new_nutrient_solution_path, :class => "dropbtn btn btn-success" %>
</h1>
<br><br>

<table class="index-table">
  <thead>
    <tr>
      <th>Date mixed</th>
      <th>Reservoir</th>
      <th>System</th>
      <th>Reservoir fill volume liters</th>
      <th>Topup or reset</th>
      <th>Ingredient1</th>
      <th>Ingredient1 qty ml</th>
      <th>Ingredient2</th>
      <th>Ingredient2 qty ml</th>
      <th>Ingredient3</th>
      <th>Ingredient3 qty ml</th>
      <th>Ingredient4</th>
      <th>Ingredient4 qty ml</th>
      <th>Ingredient5</th>
      <th>Ingredient5 qty ml</th>
      <th>Ingredient6</th>
      <th>Ingredient6 qty ml</th>
      <th>Ingredient7</th>
      <th>Ingredient7 qty ml</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nutrient_solutions.each do |nutrient_solution| %>
      <tr style="border-bottom: 1px solid black">
        <td><%= nutrient_solution.date_mixed %></td>
        <td><%= link_to Reservoir.where(id: nutrient_solution.reservoir)[0].name, "/reservoirs/#{Reservoir.where(id: nutrient_solution.reservoir)[0].id}" %></td>
        <td><%= nutrient_solution.system %></td>
        <td><%= nutrient_solution.reservoir_fill_volume_liters %></td>
        <td><%= nutrient_solution.topup_or_reset %></td>
        <td style="max-width: 28px; overflow: auto;"><%= nutrient_solution.ingredient1 %></td>
        <td><%= nutrient_solution.ingredient1_qty_ml %></td>
        <td><%= nutrient_solution.ingredient2 %></td>
        <td><%= nutrient_solution.ingredient2_qty_ml %></td>
        <td><%= nutrient_solution.ingredient3 %></td>
        <td><%= nutrient_solution.ingredient3_qty_ml %></td>
        <td><%= nutrient_solution.ingredient4 %></td>
        <td><%= nutrient_solution.ingredient4_qty_ml %></td>
        <td><%= nutrient_solution.ingredient5 %></td>
        <td><%= nutrient_solution.ingredient5_qty_ml %></td>
        <td><%= nutrient_solution.ingredient6 %></td>
        <td><%= nutrient_solution.ingredient6_qty_ml %></td>
        <td><%= nutrient_solution.ingredient7 %></td>
        <td><%= nutrient_solution.ingredient7_qty_ml %></td>
        <td><%= link_to 'Show', nutrient_solution %></td>
        <td><%= link_to 'Edit', edit_nutrient_solution_path(nutrient_solution) %></td>
        <td><%= link_to 'Destroy', nutrient_solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nutrient Solution', new_nutrient_solution_path %>
